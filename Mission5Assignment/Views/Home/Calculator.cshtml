@{
    ViewData["Title"] = "Service Pricing Calculator";
}

<main>
    <section>
        <h2>Calculate Your Tutoring Cost</h2>
        <div>
            <label for="hoursInput">Hours Needed:</label>
            <input type="number" id="hoursInput" class="form-control" placeholder="Enter hours" />
        </div>
        <div>
            <label for="rateInput">Rate per Hour:</label>
            <input type="text" id="rateInput" class="form-control" value="$50" readonly />
        </div>
        <div class="mt-3">
            <button id="calculateBtn" class="btn btn-primary">Calculate Total</button>
        </div>
        <div class="mt-3">
            <label for="totalOutput">Total Cost:</label>
            <input type="text" id="totalOutput" class="form-control" readonly />
        </div>
    </section>
</main>
